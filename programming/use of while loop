#include<iostream>
using namespace std;
int main()
{
	int choice;
	choice=1;
	{
		cout<<"enter the choice";
		cin>>choice;
		while(choice<1);
		{
			cout<<"please enter your choice\npress 1 for add\npress 2 for subtraction\npress 3 for multiplication";
			cin>>choice;
		}
		
	}
	
}
